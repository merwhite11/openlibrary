name: npm_run_test
on: [push]  # pull_request, 
jobs:
  npm_run_test:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v2
      - uses: actions/setup-node@v1
        with:
          node-version: '12'  # # Should match what's in our Dockerfile
      - run: npm install
      - run: npm run lint
      - run: make js
      - run: make css
      - run: make components
      - run: npm run test
