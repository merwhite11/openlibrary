{
  "root": true,
  "env": {
    "browser": true,
    "jquery": true
  },
  "parserOptions": {
		"sourceType": "module",
		"ecmaVersion": 6
	},
  "globals": {
  },
  "rules": {
    "indent": 2,
    "no-console": "error",
    "no-trailing-spaces": "error",
    "space-in-parens": "error",
    "no-undef": "error",
    "no-extra-semi": "error",
    "eol-last": ["error", "always"],
    "no-redeclare": "error",
    "no-mixed-spaces-and-tabs": "error",
    "no-useless-escape": "error",
    "no-unused-vars": "error"
  }
}
